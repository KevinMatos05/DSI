<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controladores.PantallaRegistrarResultadoController">
    <padding><Insets bottom="15.0" left="15.0" right="15.0" top="15.0" /></padding>
    <Label text="Registrar Resultado de Revisión Manual">
        <font><Font name="System Bold" size="20.0" /></font>
    </Label>
    <TableView fx:id="tablaEventos" prefHeight="250.0">
      <columns>
         <TableColumn fx:id="colFecha" prefWidth="150.0" text="Fecha y Hora Ocurrencia" />
         <TableColumn fx:id="colLugar" prefWidth="250.0" text="Localización Epicentro" />
            <TableColumn fx:id="colMagnitud" prefWidth="150.0" text="Magnitud" />
            <TableColumn fx:id="colEstado" prefWidth="200.0" text="Estado Actual" />
      </columns>
    </TableView>
    <Separator prefWidth="200.0" />
    <Label text="Detalles del Evento Seleccionado">
        <font><Font name="System Bold" size="16.0" /></font>
    </Label>
    <GridPane hgap="10.0" vgap="8.0">
      <columnConstraints><ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" /><ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="600.0" /></columnConstraints>
      <rowConstraints><RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /><RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /><RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" /></rowConstraints>
        <Label text="Fecha y Hora:" />
        <Label fx:id="lblFecha" text="-" GridPane.columnIndex="1" />
        <Label text="Lugar:" GridPane.rowIndex="1" />
        <Label fx:id="lblLugar" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Magnitud:" GridPane.rowIndex="2" />
        <Label fx:id="lblMagnitud" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    </GridPane>
    <HBox alignment="CENTER" spacing="15.0">
        <Button fx:id="btnConfirmar" disable="true" mnemonicParsing="false" onAction="#tomarAccionConfirmar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Confirmar Evento" />
        <Button fx:id="btnRechazar" disable="true" mnemonicParsing="false" onAction="#tomarAccionRechazar" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Rechazar Evento" />
        <Button fx:id="btnSolicitarRevision" disable="true" mnemonicParsing="false" onAction="#tomarAccionSolicitarRevision" text="Solicitar Revisión a Experto" />
    </HBox>
</VBox>
